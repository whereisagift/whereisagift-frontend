{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/components": [
        "./components"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/features/*": [
        "./features/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/utils": [
        "./utils"
      ],
      "@/ui": [
        "./components/ui"
      ],
      "@/ui/*": [
        "./components/ui/*"
      ],
      "@/lib": [
        "./lib"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/hooks": [
        "./hooks"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/providers": [
        "./providers"
      ],
      "@/providers/*": [
        "./providers/*"
      ],
      "@/types": [
        "./types"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/pages/*": [
        "./pages/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
